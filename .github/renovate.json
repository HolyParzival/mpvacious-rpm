{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/\\.spec$/"],
      "matchStrings": ["Version:\\s*(?<currentValue>.*?)\\s"],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "Ajatt-Tools/mpvacious"
    }
  ]
}
